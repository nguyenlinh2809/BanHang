<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b3196"
    android:gravity="center"
    tools:context="com.example.linh0nguyen.banhang.activity.ThanhToanActivity">
    <LinearLayout
        android:background="@drawable/thanhtoan"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin khách hàng"
            android:textColor="#F100"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"/>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/edtTenKhachHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên khách hàng"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="phone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/edtSdtKhachHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số điện thoại khách hàng"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/edtEmailKhachHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập email khách hàng"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnThanhToan"
                android:text="Gửi thông tin"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnTroVe"
                android:text="Trở về"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
