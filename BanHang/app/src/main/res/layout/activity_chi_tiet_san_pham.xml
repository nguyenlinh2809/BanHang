<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.linh0nguyen.banhang.activity.ChiTietSanPhamActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0d1ca7"
        app:title="Chi tiết sản phẩm"
        android:id="@+id/toolbar"></android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imvHinhChiTietSP"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:id="@+id/tvTenChiTietSP"
                android:textSize="20sp"
                android:textColor="#2c740c"
                android:textStyle="bold"/>
            <TextView
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvGiaChiTietSP"
                android:text="Giá sản phẩm"
                android:textSize="15sp"
                android:textColor="#b40707"
                android:textStyle="bold"/>
            <Spinner
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/custom_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnSoLuong"></Spinner>
            <Button
                android:id="@+id/btnThemGioHang"
                android:layout_margin="5dp"
                android:text="Thêm giỏ hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả chi tiết sản phẩm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#26990c"/>
    <ScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvMoTaChiTietSP" />
    </ScrollView>

</LinearLayout>
